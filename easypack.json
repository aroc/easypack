{
  "tasks": [
    {
      "name": "js-modules",
      "what": "javascript modules",
      "output": "./dist/build.js",
      "entry": "./demo-app/js/with_modules/index.js",
      "minify_after": true,
      "watch_for_changes":  "./demo-app/js/with_modules/**/*.js"
    },
    {
      "name": "js-concatenate",
      "what": "concatenate",
      "output": "./dist/concatenated.js",
      "files": [
        "./demo-app/js/without_modules/user.js",
        "./demo-app/js/without_modules/index.js"
      ],
      "minify_after": true,
      "watch_for_changes":  "./demo-app/js/without_modules/**/*.js",
      "depends_on": "js-modules"
    },
    {
      "name": "styles-with-import",
      "what": "css imports",
      "output": "./dist/build.css",
      "entry": "./demo-app/style/with_imports/main.css",
      "minify_after": true,
      "watch_for_changes":  "./demo-app/js/with_imports/**/*.css"
    },
    {
      "name": "styles-concatenate",
      "what": "concatenate",
      "output": "./dist/concatenated.css",
      "files": [
        "./demo-app/style/without_imports/*.css"
      ],
      "minify_after": true,
      "watch_for_changes":  "./demo-app/js/without_imports/**/*.css"
    },
    {
      "name": "server",
      "what": "server",
      "paths": ["public", "dist"]
    },
    {
      "name": "linter",
      "what": "javascript/flowtype-linter",
      "files": [
        "./demo-app/**/*.js"
      ],
      "watch_for_changes": "./demo-app/**/*.js"
    }
  ]
}